
create table blog_users (
  username varchar(50) primary key,
  password varchar(150) not null,
  permissionlevel integer not null,
  email varchar(80),
  numLogins integer default 0,
  createdat timestamp default current_timestamp,
  lastLogin timestamp
);

create table blog_comments (
  id serial primary key,
  username varchar(50),
  thread varchar(100),
  comment text,
  createdat timestamp default current_timestamp
);


insert into visits (site, num_visits, last_visited) VALUES ('benhub/blog/index.html', 1, current_timestamp) ON CONFLICT ON CONSTRAINT site DO UPDATE SET num_visits=EXCLUDED.num_visits + 1, last_visited=current_timestamp  WHERE site= 'benhub/blog/index.html';